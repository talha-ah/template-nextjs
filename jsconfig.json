    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@pages/*": ["./src/pages/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@forms/*": ["./src/forms/*"],
      "@public/*": ["./src/public/*"],
      "@styles/*": ["./src/styles/*"],
      "@assets/*": ["./src/assets/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@elements/*": ["./src/elements/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@components/*": ["./src/components/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", ".next", "out"]
}
